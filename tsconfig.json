{
  "compilerOptions": {
    // Input
    "module": "commonjs",
    "moduleResolution": "node",

    // Output
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "es6",

    // Config
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,

    // Module Mapping
    "baseUrl": ".",
  }
}
